{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "./src",
    "types": ["node", "jest"],
    "outDir": "lib",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "lib", "**/__tests__/**", "**/*.test.*"]
}
